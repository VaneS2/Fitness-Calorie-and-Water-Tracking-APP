<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".Fragments.Meal.CaloriesDaily">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewW"

        android:layout_width="379dp"
        android:layout_height="180dp"
        android:layout_marginTop="36dp"
        android:background="#D0A5A5"

        app:layout_constraintBottom_toTopOf="@+id/kolkuMl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/clearW"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="335dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/holo_red_light"
            android:text="X" />

        <TextView
            android:id="@+id/programW"
            android:layout_width="147dp"
            android:layout_height="39dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="109dp"
            android:text="Water"
            android:textAlignment="center"
            android:textColorHighlight="#2196F3"
            android:textColorHint="#1570B8"
            android:textColorLink="#3393E0"
            android:textSize="20dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="109dp">

            <TextView
                android:id="@+id/textView5W"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="70dp"
                android:text="Consumed:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/consumedW"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="70dp"
                android:background="#99E7DA"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8W"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="70dp"
                android:text="liters"
                android:textAlignment="center" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginStart="193dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="109dp">

            <TextView
                android:id="@+id/textView6W"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="70dp"

                android:text="Remaning:"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/remaningW"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="70dp"
                android:background="#2196F3"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10W"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="70dp"
                android:text="liters"
                android:textAlignment="center" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addWater"
        android:layout_width="135dp"
        android:layout_height="35dp"


        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:background="@color/design_default_color_secondary_variant"
        android:text="Add"
        app:layout_constraintBottom_toTopOf="@+id/waterRecyclerView"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/waterRecyclerView"

        android:layout_width="389dp"
        android:layout_height="298dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp"
        android:background="#469D7D7D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/kolkuMl"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="ml"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/waterRecyclerView"
        app:layout_constraintEnd_toStartOf="@+id/addWater"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>